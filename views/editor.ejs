	}

	.navbar-default {

		border:none;
		background-color: #780F8E;

	}
	#h5 {
		font-family: 'Montserrat', sans-serif;
	}
	.progress > svg {
		height: 100%;
		display: block;
	}

	.popover-content{
		color: #fff !important;/*black color*/
	}

	.navbar .navbar-nav {
		display: inline-block;
		float: none;
	}

	.navbar .navbar-collapse {
		text-align: center;
	}

	.info {
		
		margin-top: -7px;
		color:white;
	}

